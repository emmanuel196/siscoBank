<p id="notice"><%= notice %></p>

<h1>Usuarios Sisco Bank</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo electrónico</th>
      <th>Tipo persona</th>
      <th>Tipo de documento de identidad</th>
      <th>Número de documento de identidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firts_name %></td>
        <td><%= user.email %></td>
        <td><%= user.type_user %></td>
        <td><%= user.type_document %></td>
        <td><%= user.document_number %></td>
        <td><%= link_to 'Detalle', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Esta seguro de eliminar este usuario?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar nuevo usuario', new_user_path %>